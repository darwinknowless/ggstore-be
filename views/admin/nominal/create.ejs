<%- include ../../partials/header.ejs %>
    <%- include ../../partials/navbar.ejs %>
        <%- include ../../partials/sidebar.ejs %>
            <div class="content-wrapper">
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Nominal</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
                                    <li class="breadcrumb-item active">Add Nominal</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Add nominal form</h3>
                                    </div>
                                    <!-- Add Nominal -->
                                    <form action="/nominal/create" method="post">
                                        <div class="card-body">

                                            <div class="form-group">
                                                <label>Coin name</label>
                                                <select class="form-control select2" style="width: 100%;"
                                                    name="coinName" required>
                                                    <option selected="selected">Choose coin</option>
                                                    <option value="Gold">Gold</option>
                                                    <option value="Diamond">Diamond</option>
                                                    <option value="Jewel">Jewel</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label for="coinQuantity">Amount coins</label>
                                                <input type="number" name="coinQuantity" class="form-control"
                                                    id="coinQuantity" placeholder="Enter the amount of coins" required>
                                            </div>

                                            <div class="form-group">
                                                <label for="price">Price</label>
                                                <input type="number" name="price" class="form-control" id="price"
                                                    placeholder="Enter the amount of the price" required>
                                            </div>

                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <%- include ../../partials/footer.ejs %>
                <%- include ../../partials/js.ejs %>