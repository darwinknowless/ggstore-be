<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Coin Name</th>
            <th>Amount Coin</th>
            <th>Price Coin</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0; i < nominal.length; i++){ %>
            <tr>
                <td>
                    <%= i+1 %>
                </td>
                <td>
                    <%= nominal[i].coinName %>
                </td>
                <td>
                    <%= nominal[i].coinQuantity %>
                </td>
                <td>
                    <%= nominal[i].price %>
                </td>
                <td>
                    <form action="/nominal/delete/<%= nominal[i]._id %>?_method=DELETE" method="POST">
                        <a href="/nominal/edit/<%= nominal[i]._id %>" class="btn btn-warning"><i
                                class="fas fa-pencil-alt"></i>Edit</a>
                        <button class="btn btn-danger"><i class="fas fa-trash"></i>Delete</button>
                    </form>
                </td>
            </tr>
            <% } %>
    </tbody>
</table>